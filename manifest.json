{
	"name": "RFC Dark Mode",
	"version": "0.01",
	"description": "Make RFC documents more readable with dark mode",
	"permissions": [
		"activeTab",
		"storage",
		"http://tools.ietf.org/*",
		"https://tools.ietf.org/*"
	],
	"background": {
		"scripts": [
			"background.js"
		],
		"persistent": true
	},
	"content_scripts": [
		{
			"matches": [
				"http://tools.ietf.org/*",
				"https://tools.ietf.org/*"
			],
			"css": [
				"darkmode.css"
			]
		}
	],
	"browser_action": {
		"default_icon": {
			"16": "images/boggle16.png",
			"32": "images/boggle32.png",
			"48": "images/boggle48.png",
			"128": "images/boggle128.png"
		}
	},
	"icons": {
		"16": "images/boggle16.png",
		"32": "images/boggle32.png",
		"48": "images/boggle48.png",
		"128": "images/boggle128.png"
	},
	"manifest_version": 2
}